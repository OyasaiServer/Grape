{
  "name": "grape",
  "description": "Backend for OyasaiServer <baakun.com>",
  "version": "0.0.8",
  "private": true,
  "author": "Shun Ueda <shu225@lehigh.edu>",
  "license": "MIT",
  "scripts": {
    "test": "yarn compile && node test/test.js && cd test && node index.js",
    "format": "prettier --ignore-path .gitignore \"*.+(ts|js|tsx)\" --write",
    "lint": "eslint --ignore-path .gitignore \"*.+(ts|js|tsx)\"",
    "clean": "gts clean",
    "commit": "git add . && cz",
    "compile": "run-p compile:server compile:plugin",
    "compile:server": "webpack",
    "compile:plugin": "cd plugin && (chmod +x gradlew || echo \"Skipping chmod...\") && ./gradlew jar",
    "fix": "gts fix",
    "precommit": "npm --no-git-tag-version version patch && git add .",
    "postinstall": "husky install"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "download": "^8.0.0",
    "node-cron": "^3.0.0",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/download": "^8.0.1",
    "@types/node": "^16.4.13",
    "@types/node-cron": "^2.0.4",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.32.0",
    "gts": "^3.1.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.3.2",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
