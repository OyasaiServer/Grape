{
  "name": "grape",
  "description": "Backend for OyasaiServer <baakun.com>",
  "version": "0.0.0",
  "private": true,
  "author": "Shun Ueda <shu225@lehigh.edu>",
  "license": "MIT",
  "scripts": {
    "test": "yarn compile && node test/test.js && cd test && node index.js",
    "format": "prettier --ignore-path .gitignore \"*.+(ts|js|tsx)\" --write",
    "lint": "eslint --ignore-path .gitignore \"*.+(ts|js|tsx)\"",
    "clean": "gts clean",
    "commit": "cz",
    "compile": "run-p compile:server compile:plugin",
    "compile:server": "webpack",
    "compile:plugin": "cd plugin && (chmod +x gradlew || echo \"Skipping chmod...\") && ./gradlew jar",
    "fix": "gts fix",
    "postinstall": "husky install"
  },
  "lint-staged": {
    "*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "cron": "^1.8.2",
    "download": "^8.0.0",
    "ora": "^5.4.1",
    "readline-promise": "^1.0.5",
    "sleep-promise": "^9.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/node": "14.17.6",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "gts": "^3.1.0",
    "husky": "7.0.1",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "typescript": "4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
